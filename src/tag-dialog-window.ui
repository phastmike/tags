<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="TaggerTagDialogWindow" parent="GtkWindow">
    <property name="title" translatable="yes">Tag</property>
    <property name="resizable">true</property>
    <property name="default_width">600</property>
    <property name="default_height">670</property>
    <property name="destroy_with_parent">True</property>
    <child>
      <object class="AdwPreferencesPage">
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Filter</property>
            <child>
              <object class="AdwEntryRow" id="entry_tag_pattern">
                <property name="title">Pattern</property>
              </object>
            </child>
            <child>
              <object class="AdwEntryRow" id="entry_tag_name">
                <property name="title">Description</property>
              </object>
            </child>
            <!-- check the closing tags /object/child below
            <child>
              <object class="AdwExpanderRow">
                <property name="title">Options</property>
                <property name="expanded">true</property>
            -->
            <child>
              <object class="AdwActionRow" id="row_regex">
                <property name="title">Regular Expression</property>
                <property name="activatable">true</property>
                <child>
                  <object class="GtkSwitch" id="switch_regex">
                    <property name="halign">start</property>
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="row_case">
                <property name="title">Case Sensitive</property>
                <property name="activatable">true</property>
                <child>
                  <object class="GtkSwitch" id="switch_case">
                    <property name="halign">start</property>
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow" id="row_add">
                <property name="title">Add to Top</property>
                <!--<property name="subtitle">To make it have precedence over existing tags</property>-->
                <property name="activatable">true</property>
                <child>
                  <object class="GtkSwitch" id="switch_add">
                    <property name="halign">start</property>
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <!--
              </object>
            </child>
            -->
          </object>
        </child>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Color Scheme</property>
            <child>
              <object class="AdwActionRow">
                <property name="title">Foreground Color</property>
                <child>
                  <object class="GtkColorDialogButton" id="button_fg_color">
                    <property name="halign">end</property>
                    <property name="valign">center</property>
                    <property name="rgba">#ffffff</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title">Background Color</property>
                <child>
                  <object class="GtkColorDialogButton" id="button_bg_color">
                    <property name="halign">end</property>
                    <property name="valign">center</property>
                    <property name="rgba">#26a269</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title">Example</property>
                  <child>
                    <object class="GtkLabel" id="label_sample_example">
                      <property name="halign">end</property>
                      <property name="valign">center</property>
                      <property name="use_markup">true</property>
                      <property name="label" translatable="yes">Lorem ipsum dolor sit amet...</property>
                      <property name="xalign">0</property>
                      <property name="halign">start</property>
                      <property name="valign">center</property>
                      <property name="hexpand">0</property>
                      <property name="vexpand">1</property>
                      <property name="justify">right</property>
                    </object>
                  </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child type="titlebar">
      <object class="GtkHeaderBar" id="header_bar">
        <property name="show_title_buttons">false</property>
        <child>
          <object class="GtkButton" id="button_cancel">
            <property name="label">_Cancel</property>
            <property name="receives_default">True</property>
            <property name="use_underline">True</property>
          </object>
        </child>
        <child type="end">
          <object class="GtkButton" id="button_ok">
            <style>
              <class name="suggested-action"/>
            </style>
            <property name="label">_Add</property>
            <property name="sensitive">false</property>
            <property name="receives_default">True</property>
            <property name="use_underline">True</property>
          </object>
        </child>
        <child type="end">
          <object class="GtkButton" id="button_delete">
            <style>
              <class name="destructive-action"/>
            </style>
            <property name="label">_Delete</property>
            <property name="visible">false</property>
            <property name="icon_name">app-remove-symbolic</property>
            <property name="use_underline">True</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon_name">app-remove-symbolic</property>
                    <!--<property name="opacity">0.65</property>-->
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Delete</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <object class="GtkSizeGroup" id="sg_header_buttons">
    <widgets>
      <widget name="button_cancel"/>
      <widget name="button_ok"/>
    </widgets>
  </object>
</interface>
