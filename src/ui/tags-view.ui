<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="TagsTagsView" parent="GtkBox">
    <property name="orientation">horizontal</property>
    <!--
    <property name="hexpand">true</property>
    <property name="margin-top">12</property>
    <property name="margin-start">12</property>
    <property name="margin-end">12</property>
    <property name="margin-bottom">12</property>
    -->
    <child>
      <object class="AdwToolbarView">
        <property name="bottom_bar_style">flat</property>
        <child type="top">
          <object class="AdwHeaderBar">
            <child type="start">
                  <object class="AdwSplitButton">
                    <property name="icon-name">list-add-symbolic</property>
                    <property name="popover">popover_menu_add_tag</property>
                    <property name="tooltip-text">Load</property>
                    <property name="action-name">win.action_add_tag</property>
                  </object>
                  <!--
              <object class="GtkButton">
                <style>
                  <class name="flat"/>
                </style>
                <property name="tooltip-text">Add</property>
                <property name="action-name">win.action_add_tag</property>
                <property name="child">
                  <object class="AdwButtonContent">
                    <property name="icon-name">list-add-symbolic</property>
                  </object>
                </property>
              </object>
                  -->
            </child>
            <child type="title">
              <object class="GtkLabel">
                <property name="label">Tags</property>
                <property name="css-classes">heading</property>
              </object>
            </child>
            <child type="end">
              <object class="GtkBox">
                <child>
                  <object class="GtkMenuButton">
                    <style>
                      <class name="flat"/>
                    </style>
                    <property name="primary">true</property>
                    <property name="icon-name">view-more-symbolic</property>
                    <property name="menu-model">secondary_menu</property>
                    <property name="tooltip-text">View more</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkScrolledWindow" id="scrolled">
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <child>
              <object class="GtkBox" id="clamp1">
                <property name="hexpand">true</property>
                <property name="margin-top">12</property>
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="margin-bottom">12</property>
                <property name="orientation">vertical</property>
                <property name="spacing">12</property>
                <!--<property name="maximum-size">600</property>-->
                <child>
                  <object class="GtkLabel">
                    <property name="label">Tags</property>
                    <property name="halign">start</property>
                    <property name="margin-start">12</property>
                    <property name="visible">false</property>
                    <style>
                      <class name="heading"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkListBox" id="listbox">
                    <property name="valign">start</property>
                    <property name="margin-bottom">12</property>
                    <style>
                      <class name="boxed-list"/>
                    </style>
                    <child type="placeholder">
                      <object class="AdwStatusPage">
                        <style>
                          <class name="compact"/>
                        </style>
                        <!--<property name="title">No Tags</property>-->
                        <!--<property name="icon-name">user-bookmarks-symbolic</property>-->
                        <property name="description">There are no tags to list</property>
                        <child>
                          <object class="GtkBox">
                            <property name="spacing">6</property>
                            <property name="orientation">vertical</property>
                            <child>
                              <object class="GtkButton">
                                <style>
                                  <!--<class name="flat"/>-->
                                  <class name="accent"/>
                                </style>
                                <property name="action-name">win.action_add_tag</property>
                                <property name="child">
                                  <object class="AdwButtonContent">
                                    <property name="label">Add a tag</property>
                                    <property name="icon-name">list-add-symbolic</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton">
                                <style>
                                  <!--<class name="flat"/>-->
                                  <class name="success"/>
                                </style>
                                <property name="action-name">win.action_load_tags</property>
                                <property name="child">
                                  <object class="AdwButtonContent">
                                    <property name="label">Load tags</property>
                                    <property name="icon-name">document-new-symbolic</property>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child type="bottom">
          <object class="AdwHeaderBar">
            <property name="visible">true</property>
            <child type="start">
                  <object class="GtkToggleButton" id="button_tagsz">
                    <!--<property name="icon-name">system-file-manager-symbolic</property>-->
                    <!--<property name="icon-name">document-new-symbolic</property>-->
                    <property name="icon-name">document-edit-symbolic</property>
                    <!--<property name="popover">popover_import_tags</property>-->
                    <property name="tooltip-text">Edit mode</property>
                    <property name="action-name">win.hide_untagged_lines</property>
                  </object>
                  <!--
              <object class="GtkMenuButton">
              <style>
                <class name="flat"/>
              </style>
                <property name="primary">false</property>
                <!--<property name="icon-name">folder-new-symbolic</property>-->
                <!--
                <property name="icon-name">document-send-symbolic</property>
                <property name="menu-model">tags_load_menu</property>
                <property name="tooltip-text">Load</property>
                  </object>
                -->
                  <!--
              <object class="GtkButton">
                <style>
                  <class name="flat"/>
                </style>
                <property name="tooltip-text">Load</property>
                <property name="action-name">win.action_load_tags</property>
                <property name="child">
                  <object class="AdwButtonContent">
                    <property name="icon-name">folder-new-symbolic</property>
                  </object>
                </property>
              </object>
                  -->
            </child>
            <child type="title">
              <object class="GtkBox">
                <child>
                  <object class="GtkButton">
                    <style>
                      <class name="accent" />
                    </style>
                    <property name="icon_name">zoom-in-symbolic</property>
                    <property name="visible">false</property>
                    <property name="tooltip-text">Create tag from selected line</property>
                    <property name="action-name">win.action_add_tag_from_line</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="icon_name">pan-up-symbolic</property>
                    <property name="visible">true</property>
                    <property name="tooltip-text">Previous hit</property>
                    <property name="action-name">win.prev_hit</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="icon_name">pan-down-symbolic</property>
                    <property name="visible">true</property>
                    <property name="tooltip-text">Next hit</property>
                    <property name="action-name">win.next_hit</property>
                  </object>
                </child>
                <child>
                  <object class="GtkToggleButton">
                    <property name="visible">false</property>
                    <style>
                      <class name="success" />
                    </style>
                    <property name="icon_name">view-conceal-symbolic</property>
                    <property name="tooltip-text">Hide untagged</property>
                    <property name="action-name">win.hide_untagged_lines</property>
                  </object>
                </child>
              </object>
            </child>
            <child type="end">
              <object class="GtkBox">
                <child>
                  <object class="GtkButton">
                    <style>
                      <class name="flat"/>
                    </style>
                    <property name="tooltip-text">Save</property>
                    <property name="visible">false</property>
                    <property name="action-name">win.action_save_tags</property>
                    <property name="child">
                      <object class="AdwButtonContent">
                        <!--<property name="label">Load tags</property>-->
                        <property name="icon-name">folder-download-symbolic</property>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="tooltip-text">Remove all</property>
                    <style>
                      <class name="flat"/>
                      <!--<class name="error"/>-->
                    </style>
                    <property name="action-name">win.action_remove_all_tags</property>
                    <property name="child">
                      <object class="AdwButtonContent">
                        <!--<property name="label">Load tags</property>-->
                        <property name="icon-name">user-trash-symbolic</property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <!--
    <style>
      <class name="monospace"/>
    </style>
    -->
  </template>

  <object class="GtkPopoverMenu" id="file_popover">
    <property name="menu-model">secondary_menu</property>
  </object>

  <menu id="secondary_menu">
    <!--
    <section>
      <item>
        <attribute name="label" translatable="yes">New tag</attribute>
        <attribute name="action">win.action_add_tag</attribute>
      </item>
      </section> 
    -->
    <section>
      <item>
        <attribute name="label" translatable="yes">Load Tags</attribute>
        <attribute name="icon">document-open-symbolic</attribute>
        <attribute name="action">win.action_load_tags</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Import Tags</attribute>
        <attribute name="icon">document-open-symbolic</attribute>
        <attribute name="action">win.action_import_tags</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">Save Tags</attribute>
        <attribute name="action">win.action_save_tags</attribute>
      </item>
      <!--
      <item>
        <attribute name="label" translatable="yes">Save tagged lines</attribute>
        <attribute name="action">win.save_tagged</attribute>
      </item>
      --> 
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">Remove All</attribute>
        <attribute name="action">win.action_remove_all_tags</attribute>
      </item>
    </section>
    <section>
    </section>
  </menu>

  <object class="GtkPopoverMenu" id="popover_import_tags">
    <property name="menu-model">menu_import_tags</property>
  </object>

  <menu id="menu_import_tags">
    <section>
      <item>
        <attribute name="label" translatable="yes">Import</attribute>
        <attribute name="action">win.action_import_tags</attribute>
      </item>
    </section>
  </menu>

  <menu id="tags_load_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Load File</attribute>
        <attribute name="action">win.action_load_tags</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Import File</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      </section>
  </menu>

  <object class="GtkPopoverMenu" id="popover_menu_add_tag">
    <property name="menu-model">menu_add_tag</property>
  </object>

  <menu id="menu_add_tag">
    <section>
      <item>
        <attribute name="label" translatable="yes">Add Line</attribute>
        <attribute name="action">win.action_add_tag_from_line</attribute>
      </item>
    </section>
  </menu>

</interface>
